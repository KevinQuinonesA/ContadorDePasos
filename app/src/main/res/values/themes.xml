    <style name="Theme.ContadorDePasos.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.ContadorDePasos.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
