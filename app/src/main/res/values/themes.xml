<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ContadorDePasos" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/orange_solid</item>
        <item name="colorPrimaryDark">@color/red_solid</item>
        <item name="colorAccent">@color/orange_solid</item>
        <!-- Customize your theme here. -->
